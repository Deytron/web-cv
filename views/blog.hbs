<div class="container">
    <h1 class="title is-1 has-text-centered mt-6">LE BLOG</h1>
    <h2 class="title is-3 has-text-left mb-6" style="margin-top: 10vh;">Derniers articles</h2>
    <div class="columns is-flex-wrap-wrap is-variable is-8">
        {{#each articlesList}}
        <div class="column is-4-desktop is-6-tablet">
            <div class="card has-shadow"><a href="/blog/{{id}}" id="articleId">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="{{thumbnail}}" alt="{{title}}" style="object-fit: cover" />
                        </figure>
                    </div>
                    <div class="card-content">
                        <h3 class="title is-3">{{title}}</h3>
                        <div class="media"></div>
                        <div class="content">
                            <p class="subtitle is-5">{{preview}}</p><br />
                            <p class="tags">#{{tags}}</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
