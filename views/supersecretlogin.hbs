<section class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop is-3-widescreen">
                    <form class="box" action="/supersecretlogin" method="post">
                        <div class="field">
                            <label class="label" for="">E-mail</label>
                            <div class="control has-icons-left">
                                <input class="input" id="email" type="email" name="email" autocomplete="username"
                                    placeholder="" required="required" />
                            </div>
                        </div>
                        <div class="field">
                            <label class="label" for="">Mot de passe</label>
                            <div class="control has-icons-left">
                                <input class="input" id="password" type="password" name="password"
                                    autocomplete="current-password" placeholder="" required="required" />
                            </div>
                        </div>
                        <div class="field">
                            <input class="button is-link" type="submit" value="Connexion" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>